            <simpleChoice identifier="ChoiceA">Amplitude Modulation</simpleChoice>
            <simpleChoice identifier="ChoiceB">Digital Transmissions</simpleChoice>
            <simpleChoice identifier="ChoiceC">Frequency Modulation</simpleChoice>
            <simpleChoice identifier="ChoiceD">Phase Modulation</simpleChoice>
        </choiceInteraction>
    </itemBody>
